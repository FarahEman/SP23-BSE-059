<h4>Edit Product</h4>

<form action="/admin/products/edit/<%= product._id %>" method="post" enctype="multipart/form-data">
  <div class="form-group">
    <label for="titleInput">Title</label>
    <input
      name="title"
      type="text"
      class="form-control"
      id="titleInput"
      placeholder="Enter Title"
      value="<%= product.title %>"
      required
    />
    <small id="titleHelp" class="form-text text-muted">Product Title</small>
  </div>

  <div class="form-group">
    <label for="descriptionInput">Description</label>
    <textarea
      name="description"
      class="form-control"
      id="descriptionInput"
      placeholder="Enter Description"
      required
    ><%= product.description %></textarea>
    <small id="descriptionHelp" class="form-text text-muted">Product Details</small>
  </div>

  <div class="form-group">
    <label for="priceInput">Price</label>
    <input
      name="price"
      type="number"
      class="form-control"
      id="priceInput"
      placeholder="Enter Price"
      value="<%= product.price %>"
      required
      min="0"
    />
    <small id="priceHelp" class="form-text text-muted">Product Price in PKR</small>
  </div>

  <!-- Optional Image Upload -->
  <div class="form-group">
    <label for="imageInput">Image</label>
    <input
      name="image"
      type="file"
      class="form-control"
      id="imageInput"
      accept="image/*"
    />
    <small id="imageHelp" class="form-text text-muted">Upload an image for the product (optional).</small>
    <% if (product.image) { %>
      <div class="mt-2">
        <img src="<%= product.image %>" alt="<%= product.title %>" style="width: 100px; height: 100px;" />
        <small>Current Image</small>
      </div>
    <% } %>
  </div>

  <div class="form-group">
    <button class="btn btn-info" type="submit">Edit Product</button>
  </div>
</form>

<!-- Optional: Display error or success messages -->
<% if (errorMessage) { %>
  <div class="alert alert-danger mt-3">
    <%= errorMessage %>
  </div>
<% } %>

<% if (successMessage) { %>
  <div class="alert alert-success mt-3">
    <%= successMessage %>
  </div>
<% } %>
