<h4>Create Product</h4>
<p>If we do not give action attribute then the form is submitted to the URL on which it was rendered</p>

<form action="/admin/products/create" method="post" enctype="multipart/form-data">

  <div class="form-group">
    <label for="titleInput">Title</label>
    <input
      name="title"
      type="text"
      class="form-control"
      id="titleInput"
      placeholder="Enter Title"
      value="IPhone"
      required
    />
    <small id="emailHelp" class="form-text text-muted">Product Title</small>
  </div>

  <div class="form-group">
    <label for="category">Category</label>
    <select class="form-control" id="category" name="category" required>
      <option value="">Select a category</option>
      <% categories.forEach(category => { %>
        <option value="<%= category._id %>"><%= category.name %></option>
      <% }) %>
    </select>
  </div>

  <div class="form-group">
    <label for="descriptionInput">Description</label>
    <textarea
      name="description"
      class="form-control"
      id="descriptionInput"
      placeholder="Enter Description"
      required
    >IPhone is Awesome</textarea>
    <small id="emailHelp" class="form-text text-muted">Product Details</small>
  </div>

  <div class="form-group">
    <label for="priceInput">Price</label>
    <input
      name="price"
      type="number"
      class="form-control"
      id="priceInput"
      placeholder="Enter Price"
      value="8000"
      required
      min="0"
    />
    <small id="emailHelp" class="form-text text-muted">Product Price in PKR</small>
  </div>

  <!-- Optional Image Upload -->
  <div class="form-group">
    <label for="imageInput">Upload Image</label>
    <input
      name="image"
      type="file"
      class="form-control"
      id="imageInput"
      accept="image/*"
    />
    <small id="imageHelp" class="form-text text-muted">Upload an image for the product (optional).</small>
  </div>

  <div class="form-group">
    <button class="btn btn-info" type="submit">Create New Product</button>
  </div>

</form>

<!-- Optional: Display error or success messages -->
<% if (errorMessage) { %>
  <div class="alert alert-danger mt-3">
    <%= errorMessage %>
  </div>
<% } %>

<% if (successMessage) { %>
  <div class="alert alert-success mt-3">
    <%= successMessage %>
  </div>
<% } %>
